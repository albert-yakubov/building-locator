<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:id="@+id/my_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/textview_profilepicture"

                android:layout_width="48dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.917"
                app:layout_constraintStart_toEndOf="@+id/imageView_map"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_address"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textview_comments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.419"
                app:layout_constraintStart_toEndOf="@+id/imageView_map"
                app:layout_constraintTop_toBottomOf="@+id/textview_title"
                app:layout_constraintVertical_bias="0.397" />

            <TextView
                android:id="@+id/textview_username"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/username"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textview_title"
                app:layout_constraintEnd_toStartOf="@+id/textview_profilepicture"
                app:layout_constraintHorizontal_bias="0.844"
                app:layout_constraintStart_toEndOf="@+id/imageView_map"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.484" />

            <ImageView
                android:id="@+id/imageView_map"
                android:layout_width="113dp"
                android:layout_height="271dp"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/banner_image"
                android:scaleType="fitCenter"
                android:src="@drawable/abc_vector_test"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.073" />

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="192dp"
                android:layout_height="21dp"
                android:text="Title"
                android:textColor="@color/wine"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textview_comments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toEndOf="@+id/imageView_map"
                app:layout_constraintTop_toBottomOf="@+id/textview_profilepicture"
                app:layout_constraintVertical_bias="0.055" />

            <TextView

                android:id="@+id/textview_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:text="Comments"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toEndOf="@+id/imageView_map" />

            <TextView

                android:id="@+id/textview_posteddate"
                android:layout_width="104dp"
                android:layout_height="26dp"
                android:text="@string/post_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView_map"
                app:layout_constraintTop_toBottomOf="@+id/textview_comments"
                app:layout_constraintVertical_bias="0.904" />

            <TextView

                android:id="@+id/textview_id"
                android:layout_width="104dp"
                android:layout_height="26dp"
                android:text="@string/post_date"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toEndOf="@+id/imageView_map"
                app:layout_constraintTop_toBottomOf="@+id/textview_comments"
                app:layout_constraintVertical_bias="0.435" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>